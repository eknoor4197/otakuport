<% include partials/header %>

<div class="jumbotron">
        <h1>New Blog</h1>
</div>

<form class="ui form" action="/blog" method="POST">

  <div class="field">
    <label>Title</label>
    <input type="text" name="blog[title]" placeholder="title">
  </div>

  <div class="field">
    <label>Intro</label>
    <input type="text" name="blog[intro]" placeholder="intro">
  </div>

  <div class="field">
    <label>Image</label>
    <input id="image" type="text" name="blog[image.src]" placeholder="image src">
  </div>

  <div class="field">
    <label>Image Alt</label>
    <input type="text" name="blog[image.alt]" placeholder="image alt">
  </div>

  <div class="field">
    <label>Image Credit</label>
    <input type="text" name="blog[image.credit]" placeholder="image credit">
  </div>

  <div class="field">
    <label>Body</label>
    <textarea type="text" id="MyID" name="blog[body]"></textarea>
  </div>

  <div class="field">
    <label>Featured</label>
    <input type="text" name="blog[featured]" placeholder="yes or no">
  </div>

  <div class="field">
    <label>Tags</label>
    <input type="text" name="blog[tags]" placeholder="tags">
  </div>

  <div class="field">
        <label>Date</label>
    <input type="text" name="blog[date]" placeholder="date">
  </div>

  <div class="field">
    <label>Title URL</label>
    <input type="text" name="blog[titleURL]" placeholder="titleURL">
  </div>

  <button class="ui blue button" style="margin-left: 280px;margin-top: 10px;width : 150px;">Submit</button>
</form>


<% include partials/footer %>
