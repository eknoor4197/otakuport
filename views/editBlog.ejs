<form class="ui form" action="/blog/<%= blog._id %>/<%= blog.titleURL %>?_method=PUT" method="POST">

  <div class="field">
    <label>Title</label>
    <input type="text" name="blog[title]" value="<%= blog.title %>">
    <!-- <textarea type="text" name="blog[title]"><%= blog.body %></textarea> -->
  </div>

  <div class="field">
    <label>Intro</label>
    <input type="text" name="blog[intro]" value="<%= blog.intro %>">
  </div>

  <div class="field">
    <label>Image</label>
    <input id="image" type="text" name="blog[image.src]" value="<%= blog.image.src %>">
  </div>

  <div class="field">
    <label>Image Alt</label>
    <input type="text" name="blog[image.alt]" value="<%= blog.image.alt %>">
  </div>

  <div class="field">
    <label>Image Credit</label>
    <input type="text" name="blog[image.credit]" value="<%= blog.image.credit %>">
  </div>

  <div class="field">
    <label>Text</label>
      <textarea id="MyID" type="text" name="blog[body]"><%= blog.body %></textarea>
  </div>

  <div class="field">
    <label>Date</label>
    <input type="text" name="blog[date]" value="<%= blog.date %>">
  </div>

   <div class="field">
    <label>Featured</label>
    <input type="text" name="blog[featured]" value="<%= blog.featured %>">
  </div>

  <div class="field">
    <label>Tags</label>
    <input type="text" name="blog[tags]" value="<%= blog.tags %>">
  </div>

  <div class="field">
    <label>Title URL</label>
    <input type="text" name="blog[titleURL]" value="<%= blog.titleURL %>">
  </div>

  <button class="ui green button" style="margin-left :10px;width: 200px;">Submit</button>
</form>

<% include partials/footer %>
