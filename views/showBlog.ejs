<% include partials/header %>

<div class="show-page">

  <div class="blog-content">

      <a href="/blog" class="post-type-blog">BLOG</a>
      <h1 id="main-blog-title"><%= blog.title %></h1>

      <h2 class="blog-intro"><em><%= blog.intro %></em></h2>

      <span class="blog-author"><p>By <a href="/author/<%= blog.author.username %>" class="author"><%= blog.author.username %></a> | <%= blog.date %></p></span><br>

      <div id="main-blog-img">

        <picture>
            <source srcset="/uploads/<%= blog.image.src.substring(0, blog.image.src.length - 4); %>-sharp-450x270.jpg" media="(max-width: 640px)">
            <source srcset="/uploads/<%= blog.image.src.substring(0, blog.image.src.length - 4); %>-sharp-810x210.jpg" media="(max-width: 990px)">
            <img src="/uploads/<%= blog.image.src.substring(0, blog.image.src.length - 4); %>-sharp-800x600.<%= blog.image.src.slice(-3); %>" alt="image description">
        </picture>

      </div>

      <div class="social-share">
          <a id="fb-share" href="http://www.facebook.com/share.php?text=<%= blog.title %> & u=<%= fullUrl %>" target="_blank"><i class="fa fa-facebook"></i>SHARE</a>
          <a id="twitter-share" href="https://twitter.com/share?url=<%= fullUrl %>&text=<%= blog.title %>" target="_blank" title="Share on Twitter"><i class="fa fa-twitter" aria-hidden="true"></i>TWEET</a></a>
          <a id="reddit-share" href="https://reddit.com/submit?title=<%= blog.title %>&url=<%= fullUrl %>"><i class="fa fa-reddit-alien"></i>SHARE</a>
      </div>

      <div id="main-blog-content"><%- blog.body %></div>

      <div class="fb-comments" data-href="https://otakuport.com" data-width="100%" data-numposts="100"></div>

      <% if( currentUser && ( currentUser.username == "Eknoorpreet Singh" || currentUser.username == blog.author.username) ) { %>

                        <a class="ui green button" href="/blog/<%= blog.nanoId %>/<%= blog.titleURL %>/edit" style="margin-left : 180px;width: 200px;">Edit</a>

                        <form action="/blog/<%= blog.nanoId %>/<%= blog.titleURL %>?_method=DELETE" method="POST">

                                <button class="ui red button" style="margin-left :10px;width: 200px;">Delete</button>

                        </form>

      <% } %>


      <h2 class="post more">MORE FROM OTAKUPORT</h2>
      <div class="flex-grid">
        <% more.forEach(function(more,i) { %>
        <div class="boxes">
          <div class="img">
            <a href="/review/<%= more.nanoId %>/<%= more.titleURL %>">
              <picture>
                <source srcset="/uploads/<%= more.image.src.substring(0, more.image.src.length - 4); %>-sharp-110x80.jpg" media="(max-width: 480px)">
                <img class="img-responsive" alt="<%= more.image.alt %>" srcset="/uploads/<%= more.image.src.substring(0, more.image.src.length - 4); %>-sharp-355x170.jpg">
              </picture>     
            </a>
          </div>
          <div class="title">  
            <a href="/review/<%= more.nanoId %>/<%= more.titleURL %>"><h2><%= more.title %></h2></a>
            <p>By <a href="/author/<%= more.author.username %>" class="author"><%= more.author.username %></a> | <%= more.date %></p>
          </div>
        </div>
        <% }) %>  
      </div>


  </div>

  <div class="trending-side">
    <div class="trending">
      <h2 class="post">TRENDING</h2>
      <% trending.forEach(function(trending,i) { %>
      <div class="article">
        <div class="img">
          <a href="/news/<%= trending.nanoId %>/<%= trending.titleURL %>">
            <img class="img-responsive" alt="<%= trending.image.alt %>" src="/uploads/<%= trending.image.src.substring(0, trending.image.src.length - 4); %>-sharp-355x170.<%= trending.image.src.slice(-3); %>">
          </a>
        </div>
        <div class="title">
          <a href="/news/<%= trending.nanoId %>/<%= trending.titleURL %>"><h3><%= trending.title %></h3></a>
        </div>
      </div>
      <% }) %>
    </div>
  </div>

</div>

<% include partials/footer %>

