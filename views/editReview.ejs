<% include partials/header %>
<div class="jumbotron">
        <h1>Edit Review</h1>
</div>

<form class="ui form" action="/review/<%= review.nanoId %>/<%= review.titleURL %>?_method=PUT" method="POST">

  <div class="field">
    <label>Title</label>
    <input type="text" name="review[title]" value="<%= review.title %>">
  </div>

  <div class="field">
    <label>Intro</label>
    <input type="text" name="review[intro]" value="<%= review.intro %>">
  </div>

   <div class="field">
    <label>Image</label>
    <input id="image" type="text" name="review[image.src]" value="<%= review.image.src %>">
  </div>

  <div class="field">
    <label>Image Alt</label>
    <input type="text" name="review[image.alt]" value="<%= review.image.alt %>">
  </div>

  <div class="field">
    <label>Image Credit</label>
    <input type="text" name="review[image.credit]" value="<%= review.image.credit %>">
  </div>

  <div class="field">
    <label>Body</label>
    <textarea id="MyID" name="review[body]"><%= review.body %></textarea>
  </div>

  <div class="field">
    <label>Rating</label>
    <input name="review[rating]" value="<%= review.rating %>">
  </div>

  <div class="field">
    <label>Date</label>
    <input type="text" name="review[date]" value="<%= review.date %>">
  </div>

  <div class="field">
    <label>Featured</label>
    <input type="text" name="review[featured]" value="<%= review.featured %>">
  </div>

  <div class="field">
    <label>Tags</label>
    <input type="text" name="review[tags]" value="<%= review.tags %>">
  </div>

  <div class="field">
    <label>Title URL</label>
    <input type="text" name="review[titleURL]" value="<%= review.titleURL %>">
  </div>

  <!-- <button class="ui button" type="submit">Submit</button> -->
  <button class="ui secondary basic button">Submit</button>
</form>

<% include partials/footer %>
