<% include partials/header %>

<div id="review-page" class="jumbotron">
        <a href="/review" class="post-type">REVIEWS</a>
        <!-- <h1>BLOG</h1> -->
</div>

<div class="review-all">

<div class="container blog-review-laptop">

        <a href="/review" class="post-detail trending">REVIEW</a>

      <div class="row">

        <% review.forEach(function(review,index) { %>


      <div class="col-md-4 col-sm-6 news-section">
              
        <div class="thumbnail">
          <div class="img">
          <a href="/review/<%= review._id %>/<%= review.titleURL %>"><img src="<%= review.image %>"></a>
          <a href="/review/<%= review._id %>/<%= review.titleURL %>"><h2><%= review.title %></h2></a>
          </div>  
        </div>

        <div class="caption">
        </div>

        <span><em>By <a class="author" href="/author/<%= review.author.username %>"><%= review.author.username %></a> on <%= review.date %></em></span><br><br>



      </div>

      <% }) %>

      </div>

</div>

<div class="container-more container" id="more-section-mobile"> <!-- Before 18/11, this div had a class "container-more"... -->

                    <!--MOBILE VERSION-->

        <a href="/review" class="post-detail trending news-section-laptop">review</a>

        <% review.forEach(function(review,index) { %>

         <div class="row blog-section-laptop">
         <div class="thumbnail" style="margin-left: -120px;">
                      <div class="img">
                        <a href="/review/<%= review._id %>/<%= review.titleURL %>"><img src="<%= review.image %>"></a>
                      </div>
                 </div>

                    <div class="caption">
                        <a href="/review/<%= review._id %>/<%= review.titleURL %>"><h1><%= review.title %></h1></a>
                    </div>

                    <div class="relative" style="font-size: 14px;margin-top: 10px;">
                        <span class="author-date"> <!-- <a class="author" href="/author/<%= review.author %>"><%= review.author %></a> | --> <%= review.date %></span>
                            <!-- <p>One Punch Man Season 3starts in 2018, the production is in full gear. Watch out!</p> -->
                        </div>

        </div>

        <hr class="style7">

     <% }) %>

     </div>

</div>

<% include partials/footer %>



