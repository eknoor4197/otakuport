		<div class="col-md-3 col-md-offset-1">

	      <div id="container">

            <div class="social-share">
	          <a id="fb-share" href="http://www.facebook.com/share.php?text=<%= revisited.title %> & u=<%= fullUrl %>" target="_blank"><i class="fa fa-facebook"></i>SHARE</a>
	          <a id="twitter-share" href="https://twitter.com/share?url=<%= fullUrl %>&text=<%= revisited.title %>" target="_blank" title="Share on Twitter"><i class="fa fa-twitter" aria-hidden="true"></i>TWEET</a></a>
	          <a id="reddit-share" href="https://reddit.com/submit?title=<%= revisited.title %>&url=<%= fullUrl %>"><i class="fa fa-reddit-alien"></i>SHARE</a>
	        </div>  

			<div id="main-revisited-content"> <%- revisited.body %> </div>

			<% if( currentUser && ( currentUser.username == "Eknoorpreet Singh" || currentUser.username == revisited.author) ) { %>

			<a class="ui secondary basic button" href="/revisited/<%= revisited._id %>/<%= revisited.titleURL %>/edit">Edit</a>

			<form action="/revisited/<%= revisited._id %>/<%= revisited.titleURL %>?_method=DELETE" method="POST">
				<button class="ui secondary basic button">Delete</button>

			</form>
        
			<% } %>

			<h2 id="more"><em>MORE FROM OtakuPort</em></h2>

		    <% latest.forEach(function(latest,index) { %>

		    <div class="col-md-4 col-sm-6 more-section">
		  		    
		     <div class="thumbnail">
		      <div class="img">
		        <a href="#" class="sub-category">TV</a>
		    	<a href="/<%= latest.postType %>/<%= latest.referenceId %>/<%= latest.titleURL %>"><img src="<%= latest.image %>"></a>
		    	<!-- <a href="/<%= latest.postType %>/<%= latest.referenceId %>"><h3><%= latest.title %></h3></a> -->
		      </div>	
		    </div>

		    <div class="caption">
		    	<a href="/<%= latest.postType %>/<%= latest.referenceId %>/<%= latest.titleURL %>"><h3><%= latest.title %></h3></a>
		    </div>

		    <span><em>By <a class="author" href="/author/<%= latest.author %>"><%= latest.author %></a> on <%= latest.date %></em></span><br><br>

		  </div>

	    <% }) %>

		  </div>

	    </div>

		<div class="col-md-3 col-md-offset-5 ">

		 <div class="related-posts">
		 <h2 id="trending">TRENDING</h2>
			<% latest.forEach(function(latest,index) { %>

			  <div class="individual-related">
			    <div class="thumbnail-related">
			      <div class="img">
			    	<a href="/<%= latest.postType %>/<%= latest.referenceId %>/<%= latest.titleURL %>"><img class="img-responsive" src="<%= latest.image %>"></a>
			    	<a href="/<%= latest.postType %>/<%= latest.referenceId %>/<%= latest.titleURL %>"><h3><%= latest.title %></h3></a>
			      </div>
			    </div>

			    <div class="caption-related">
			    	<!-- <a href="/<%= latest.postType %>/<%= latest.referenceId %>"><h3><%= latest.titleURL %></h3></a> -->
			    </div>
			  </div>
			    
			<% }) %>
		 </div>

